# Memory Intensive Monitor - Environment Configuration

# Logging Configuration
ENABLE_LOGGING=true
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Storage Configuration
STORAGE_TYPE=csv  # Options: sqlite, csv
STORAGE_PATH=./data
STORAGE_FILE=memory_intensive_monitor.csv
# Data Retention
RETENTION_DAYS=7
MAX_LOG_ROWS=10000

# Monitoring Configuration
MONITOR_INTERVAL=2  # Seconds between process updates

# API Configuration
CORS_ORIGINS=http://localhost:3000
# API_TOKEN=your_secret_token  # Uncomment to enable API authentication

# Server Configuration
HOST=0.0.0.0
PORT=8000